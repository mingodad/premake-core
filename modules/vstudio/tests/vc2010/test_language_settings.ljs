	var p = premake;
	var suite = test.declare("vs2010_language_settings");
	var vc2010 = p.vstudio.vc2010;
	var project = p.project;


//
// Setup
//

	var wks;

	function suite.setup() {
		p.action.set("vs2010");
		rule ("MyRules");
		rule ("MyOtherRules");
		wks = test.createWorkspace();
	}

	var function prepare() {
		var prj = test.getproject(wks);
		vc2010.importLanguageSettings(prj);
	}


//
// Writes language settings.
//

	function suite.structureIsCorrect() {
		prepare();
		test.capture ([=[
<Import Project="$(VCTargetsPath)\Microsoft.Cpp.props" />
		]=]);
	}
