project ("luashim-lib");
	language    ("C");
	kind        ("StaticLib");
	warnings    ("extra");
	pic         ("on");

	includedirs ({ "../ljs/src" });

	files
	({
		"*.c",
		"*.h",
		"*.ljs"
	});

	filter ("system:linux or bsd or hurd or aix");
		defines      ({ "LUA_USE_POSIX", "LUA_USE_DLOPEN" });

	filter ("system:macosx");
		defines      ({ "LUA_USE_MACOSX" });
