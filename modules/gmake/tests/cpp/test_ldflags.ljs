	var p = premake;
	var suite = test.declare("make_ldflags");
	var make = p.make;


//
// Setup
//

	var wks, prj;

	function suite.setup() {
		wks, prj = test.createWorkspace();
		symbols ("On");
	}

	var function prepare(calls) {
		var cfg = test.getconfig(prj, "Debug");
		var toolset = p.tools.gcc;
		make.ldFlags(cfg, toolset);
	}


//
// Check the output from default project values.
//

	function suite.checkDefaultValues() {
		prepare();
		test.capture ([=[
  ALL_LDFLAGS += $(LDFLAGS)
		]=]);
	}

//
// Check addition of library search directores.
//

	function suite.checkLibDirs() {
		libdirs ({ "../libs", "libs" });
		prepare();
		test.capture ([=[
  ALL_LDFLAGS += $(LDFLAGS) -L../libs -Llibs
		]=]);
	}

	function suite.checkLibDirs_X86_64() {
		architecture ("x86_64");
		system (p.LINUX);
		prepare();
		test.capture ([=[
  ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64
		]=]);
	}

	function suite.checkLibDirs_X86() {
		architecture ("x86");
		system (p.LINUX);
		prepare();
		test.capture ([=[
  ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib32 -m32
		]=]);
	}

	function suite.checkLibDirs_X86_64_MacOSX() {
		architecture ("x86_64");
		system (p.MACOSX);
		prepare();
		test.capture ([=[
  ALL_LDFLAGS += $(LDFLAGS) -m64
		]=]);
	}
